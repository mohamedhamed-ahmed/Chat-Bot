generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Int
  description String?
  reviews     Review[]
  summaries   Summary?
}

model Review {
  id        Int      @id @default(autoincrement())
  author    String
  rating    Int
  content   String
  createdAt DateTime @default(now())
  productId Int
  product   Product  @relation(fields: [productId], references: [id])
}

model Summary {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  expiresAt DateTime
  productId Int      @unique
  product   Product  @relation(fields: [productId], references: [id])
}
